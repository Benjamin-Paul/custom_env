#kubernetes
alias kube="kubectl"
kubeff () {
    kubectl get pods -A --no-headers | fzf --bind 'tab:up,btab:down'| awk '{print $2, $1}' | xargs -n 2 bash -c 'kubectl edit pod $0 -n $1'
}
kubedd () {
    kubectl get pods -A --no-headers | fzf --bind 'tab:up,btab:down'| awk '{print $2, $1}' | xargs -n 2 bash -c 'kubectl describe pod $0 -n $1 | less'
}
